{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom", "dom.iterable"],
    "outDir": "./dist"
  },
  "include": ["docs/**/*.ts", "docs/**/*.js", "docs/**/*.vue"],
  "exclude": ["node_modules"]
}
